{
  "name": "@hubot-friends/hubot-redis-brain",
  "description": "A hubot script to persist hubot's brain using redis Hash Tables",
  "version": "4.0.0",
  "author": "Joey Guerra <github@joeyguerra.com>",
  "license": "MIT",
  "keywords": [
    "hubot",
    "hubot-scripts",
    "brain",
    "redis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hubot-friends/hubot-redis-brain.git"
  },
  "engines": {
    "node": ">= 24"
  },
  "bugs": {
    "url": "https://github.com/hubot-friends/hubot-redis-brain/issues"
  },
  "main": "index.mjs",
  "scripts": {
    "start": "hubot",
    "test": "node --test --test-timeout=5000 test/*.mjs",
    "test:watch": "node --watch --test --test-timeout=5000",
    "e2e": "node --test test/e2e/*",
    "start:redis": "docker run --rm -p 6379:6379 -d --name hubot-redis -v $(pwd)/redis-data:/data redis redis-server --appendonly yes"
  },
  "peerDependencies": {
    "hubot": ">=13.0.0 || 0.0.0-development"
  },
  "release": {
    "branches": [
      "main"
    ],
    "dryRun": false
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "redis": "^5.9.0"
  },
  "files": [
    "index.mjs",
    "src/RedisBrain.mjs",
    "README.md"
  ]
}
